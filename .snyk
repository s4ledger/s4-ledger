# Snyk (https://snyk.io) policy file
# Patches and ignores for known vulnerabilities

version: v1.25.0

ignore: {}

patch: {}

# Language and package manager
language-settings:
  python:
    python-version: "3.11"

# Severity threshold
severity-threshold: high

# Auto-fix PRs
auto-fix-prs:
  enabled: true
  type: upgrade

# PR checks
pr-checks-fail-threshold: high

# License compliance
license-policies:
  action: warn
  deny:
    - GPL-3.0
    - AGPL-3.0
  allow:
    - MIT
    - Apache-2.0
    - BSD-2-Clause
    - BSD-3-Clause
    - ISC
